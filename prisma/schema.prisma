generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Artikel {
  id        String   @id @default(cuid())
  judul     String
  konten    String?
  file      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum KemerahanEnum {
  ringan
  sedang
  parah
}

enum BenjolanEnum {
  ringan
  sedang
  parah
}

enum CairanEnum {
  ringan
  sedang
  parah
}

enum TingkatKeparahanEnum {
  rendah
  sedang
  tinggi
}

model CekSadari {
  id                String                @id @default(cuid())
  kemerahan         KemerahanEnum
  benjolan          BenjolanEnum
  cairan            CairanEnum
  tingkatKeparahan  TingkatKeparahanEnum
  createdAt         DateTime              @default(now())

  @@map("CekSadari")
}

model User {
  id         String   @id @default(cuid())
  username   String   @unique
  email      String   @unique
  password   String
  profilePic String?
  role       Role     @default(USER)
  createdAt  DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}

model Video {
  id          String   @id @default(cuid())
  title       String
  description String?
  videoUrl    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("Video")
}